<p id="notice"><%= notice %></p>


<div class="col-lg-12">
  <div class="page-header">
    <h1 id="tables">Campaigns</h1>
  </div>

  <div class="bs-component">
    <table class="table table-striped table-hover ">
      <thead>
        <tr>
          <th>Campaign</th>
          <th>Past Campaign Followups</th>
          <th>Campaign Contacts</th>
          <th>Date Created</th>
        </tr>
      </thead>

      <tbody>
        <% @campaigns.each do |campaign| %>
          <tr>
            <td><%= link_to campaign.name, user_campaign_path(current_user, campaign) %></td>
            <td><%= link_to 'review', user_campaign_campaign_followups_path(current_user, campaign) %></td>
            <td><%= campaign.contacts.count %></td>
            <td><%= campaign.created_at.strftime("%d/%m/%y") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <div id="source-button" class="btn btn-primary btn-xs" style="display: none;">&lt; &gt;</div></div><!-- /example -->
</div>
<%= link_to 'New Campaign', new_user_campaign_path(current_user, @campaign) %>

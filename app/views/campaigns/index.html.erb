<p id="notice"><%= notice %></p>


<div class="col-lg-12">
  <div class="page-header">
    <h1 id="tables">Campaigns</h1>
  </div>

  <div class="bs-component">
    <table class="table table-striped table-hover ">
      <thead>
        <tr>
          <th>Campaign</th>
          <th>Show Activity</th>
          <th>Contacts</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>

      <tbody>
        <% @campaigns.each do |campaign| %>
          <tr>
            <td><%= campaign.name %></td>
            <td><%= link_to 'Show', user_campaign_path(current_user, campaign) %></td>
            <td><%= link_to 'Contacts', user_campaign_contacts_path(current_user, campaign) %></td>
            <td><%= link_to 'Edit', edit_user_campaign_path(current_user, campaign) %></td>
            <td><%= link_to 'Destroy', user_campaign_path(current_user, campaign), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <div id="source-button" class="btn btn-primary btn-xs" style="display: none;">&lt; &gt;</div></div><!-- /example -->
</div>
<%= link_to 'New Campaign', new_user_campaign_path(current_user, @campaign) %>
